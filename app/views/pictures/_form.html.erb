<%=form_for @picture,:html =>{:class=>"form-horizontal center"} do |f|%>
    <div class="form-group">
    <%=f.label :title,:class=>"col-sm-2 col-form-label"%>
    <%=f.text_field :title,:class=>"col-sm-8"%>
    </div>

    <div class="form-group">
    <%=f.label :description,:class=>"col-sm-2 col-form-label"%>
    <%=f.text_area :description,:class=>"col-sm-8"%>
    </div>

    <div class="form-group">
    <%=f.label :url,:class=>"col-sm-2 col-form-label"%>
    <%=f.text_field :url, :class=>"col-sm-8"%>
    </div>

    <div class="form-group">
    <%=f.label "tags",:class=>"col-sm-2 col-form-label"%>
    <%=f.collection_check_boxes :tag_ids, @tags, :id, :tag_name%>
    </div>


<div class="form-group">
<%=f.label "Create a new tag:",:class=>"col-sm-2 col-form-label"%>
    <%=f.fields_for :tags, @picture.tags.build do |tags_fields|%>
    <%=tags_fields.text_field :tag_name, :class=>"col-sm-8"%>
    <%end%>
    <%=f.hidden_field :user_id, :value => @user.id%>
    </div>
    <div class="col-sm-10">
    <%=f.submit "Submit", :class => "btn btn-outline-info"%>
    </div>
  <%end%>