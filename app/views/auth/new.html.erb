
<div class="jumbotron p-4 p-md-5 text-white rounded bg-dark">
<h1>Welcome to Events</h1></div>
<h3>  Please login</h3>
<h3 style = “color:red” ><%=flash[:message]%></h3>
<body>
<%=form_for :auth ,:html =>{:class=>"form-horizontal center"} do |f|%>
<div class="form-group">
<%=f.label :username ,:class=>"col-sm-2 col-form-label"%>
<%=f.text_field :username%>
</div>
<div class="form-group">
<%=f.label :password,:class=>"col-sm-2 col-form-label"%>
<%=f.password_field :password%>
</div>
<div class="form-group">
    <div class="col-sm-10">
<%=f.submit "login",:class => "btn btn-outline-info"%>
</div>
</div>
<%end%>
<div class="col-sm-10">
<div>New user? <%=link_to "signup", signup_path,:class => "btn btn-link"%></div>
</div>
